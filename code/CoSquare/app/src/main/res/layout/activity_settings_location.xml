<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#444"
    tools:context=".settings.SettingsLocationActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_settings_location"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#ddf"
        android:layout_alignParentTop="true"
        android:id="@+id/textview"/>


    <Button
        android:text="I am at Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/button_at_home"
        android:background="@drawable/btn3"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#fbb"
        android:layout_below="@+id/textview"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="I am at Work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/button_at_work"
        android:background="@drawable/btn3"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#fbb"
        android:layout_below="@+id/button_at_home"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/button_save"
        android:background="@drawable/btn0"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#ddf"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editTextLogin"
        android:layout_alignEnd="@+id/editTextLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
